source "https://rubygems.org"

# DSL for creating web applications
gem "sinatra", "~> 2.1"
# Object Relational Mapper
gem "activerecord", "~> 6.1"
# Configures rack tasks for Active Record
gem "sinatra-activerecord"
# Runs rake tasks from the command line
gem "rake"
# Provides functionality to interact with a SQLite database:
gem "sqlite3", "~> 1.4"
# Requires all files in a folder
gem "require_all"
# These gems are used for running a development environment:
group :development do 
    # Auto-reload the server when files are changed:
    gem "rerun"
    gem "pry"
end
